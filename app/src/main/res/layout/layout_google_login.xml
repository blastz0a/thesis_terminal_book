<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/red_google_shape"
        android:id="@+id/frame_layout1">

        <com.google.android.gms.common.SignInButton
            android:id="@+id/login_google_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:visibility="gone"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="1"
            android:paddingTop="@dimen/padding_margin_10dp"
            android:paddingBottom="@dimen/padding_margin_10dp"
            android:background="@drawable/google_selector"
            android:id="@+id/ll_google_custom_btn">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_google_account"
                android:layout_weight="0.7"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="@string/login_google"
                android:textColor="@color/color_red_google"
                android:textSize="@dimen/normal_medium_font_size"
                android:gravity="center_vertical"
                android:layout_weight="0.3"/>

        </LinearLayout>

    </FrameLayout>

</LinearLayout>