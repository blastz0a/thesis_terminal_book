<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/llTerminal">

    <android.support.v7.widget.CardView
        android:id="@+id/cvTerminal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="5dp"
        app:cardCornerRadius="10dp">

        <ImageView
            android:id="@+id/ivTerminal"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_gravity="center|left"
            android:layout_marginLeft="10dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/padding_margin_80dp"
            android:orientation="vertical"
            android:padding="@dimen/padding_margin_10dp">

            <LinearLayout
                android:id="@+id/linearNama"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/tv_terminal_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="sans-serif"
                    android:textSize="17dp"
                    android:text="Terminal Name"/>
            </LinearLayout>

            <TextView
                android:id="@+id/tv_terminal_type_id"
                android:layout_width="125dp"
                android:layout_height="match_parent"
                android:fontFamily="sans-serif"
                android:textColor="@color/color_grey_500"
                android:textSize="14dp"
                android:textStyle="bold"
                android:text="Terminal Type ID"/>

            <LinearLayout
                android:id="@+id/linearLatLong"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="2dp"
                android:layout_marginTop="2dp"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/ic_terminal_address"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/img_address" />

                <TextView
                    android:id="@+id/tv_terminal_address"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:fontFamily="sans-serif"
                    android:paddingLeft="6dp"
                    android:textColor="@color/color_grey_500"
                    android:textSize="14dp"
                    android:text="0.0"/>

                <!--<ImageView-->
                    <!--android:id="@+id/ic_terminal_longitude"-->
                    <!--android:layout_width="20dp"-->
                    <!--android:layout_height="20dp"-->
                    <!--android:src="@drawable/img_logitude" />-->

                <!--<TextView-->
                    <!--android:id="@+id/tv_terminal_longitude"-->
                    <!--android:layout_width="wrap_content"-->
                    <!--android:layout_height="match_parent"-->
                    <!--android:fontFamily="sans-serif"-->
                    <!--android:paddingLeft="6dp"-->
                    <!--android:textColor="@color/color_grey_500"-->
                    <!--android:textSize="14dp"-->
                    <!--android:text="0.0"/>-->
            </LinearLayout>

            <LinearLayout
                android:id="@+id/linear2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                >

                <ImageView
                    android:id="@+id/ic_terminal_open_time"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/img_clock_8am" />

                <TextView
                    android:id="@+id/tv_terminal_open"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:fontFamily="sans-serif"
                    android:paddingLeft="6dp"
                    android:textColor="@color/color_grey_500"
                    android:textSize="14dp"
                    android:text="10:00 - 19:00"/>

                <TextView
                    android:id="@+id/tv_terminal_closed"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:fontFamily="sans-serif"
                    android:textColor="@color/color_grey_500"
                    android:textSize="14dp" />
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/linearInactive"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#bdcf3a3a"
            android:gravity="end"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/logo_alert" />

        </LinearLayout>

    </android.support.v7.widget.CardView>

</LinearLayout>